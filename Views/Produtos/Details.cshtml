@model BDVendaDireta.Models.Produto

@{
    ViewBag.Title = "Details";
}

<h2>Confirmar Compra</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
     

        @Html.HiddenFor(model=> model.ProdutoId)
        <div class="form-group">
            <b> @Html.DisplayNameFor(model => model.Nome) :
            </b>
        
                @Html.DisplayFor(model => model.Nome)
        </div>

        <div class="form-group">
            <b>
                @Html.DisplayNameFor(model => model.Preco) :
            </b>

                @Html.DisplayFor(model => model.Preco)

</div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Confirmar Compra" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
